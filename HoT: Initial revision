#include <stdio.h>
#include <stdlib.h>
#define RAND_MAX 1

int main(){
  int H=0,T=0;
  
  printf("Tossing a coin...\n");
  
  for(i=0;i<3;i++){
    printf("Round %d: ",i);
    
    if(rand()==0){
      printf("Heads\n");
      H+=1;
    }
    
    else{
      printf("Tails\n");
      T+=1;
    } 
  }
  
  printf("Heads:%d, Tails:%d\n",H,T);
}
